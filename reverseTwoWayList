public void reverse() {
        Node<E> node = head;
        while (node != null) {
            Node<E> next = node.nextNode;
            Node<E> previous = node.previousNode;

            node.nextNode = previous;
            node.previousNode = next;

            if (previous == null) {
                tail = node;
            }
            if (next == null) {
                head = node;
            }
            node = next;
        }
    }
